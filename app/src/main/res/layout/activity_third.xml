<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@drawable/background"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-2dp"

        android:layout_y="1dp"
        android:gravity="center"
        android:text="ENTER DETAILS TO CREATE ACCOUNT"
        android:textAlignment="center"
        android:textColor="#000080"
        android:textSize="19dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="45dp"
        android:text="Name"
        android:textColor="#000080"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="104dp"
        android:text="ID"
        android:textColor="#000080"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-2dp"
        android:layout_y="163dp"
        android:textColor="#000080"
        android:text="Address"
        android:textStyle="bold" />
    <TextView

        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:textColor="#000080"
        android:layout_y="230dp"
        android:text="MobileNo"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="288dp"
        android:text="EnterAmount"
        android:textColor="#000080"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="349dp"
        android:text="AccountType"
        android:textColor="#000080"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="414dp"
        android:textColor="#000080"
        android:text="Age"
        android:textStyle="bold" />
    <EditText

        android:id="@+id/editTextTextPersonName3"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="34dp"
        android:ems="10"
        android:textColor="#000080"
        android:hint="EnterName"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_x="99dp"
        android:layout_y="96dp"
        android:textColor="#000080"
        android:ems="10"
        android:hint="EnterID"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_x="101dp"
        android:layout_y="152dp"
        android:textColor="#000080"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="216dp"
        android:ems="10"

        android:textColor="#000080"
        android:hint="EnterMobileNo"
        android:inputType="number" />
    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="287dp"
        android:textColor="#000080"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="279dp"
        android:ems="10"
        android:hint="Enter Initial Amount"
        android:inputType="number" />
    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:textColor="#000080"
        android:layout_x="102dp"
        android:layout_y="340dp"
        android:ems="10"
        android:hint="Enter Account Type"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/editTextNumber4"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_x="102dp"
        android:textColor="#000080"
        android:layout_y="407dp"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="number" />
    <Button
        android:id="@+id/button7"
        android:layout_width="114dp"

        android:layout_height="wrap_content"
        android:layout_x="42dp"
        android:layout_y="500dp"
        android:backgroundTint="#000080"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/button8"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_x="204dp"
        android:layout_y="496dp"
        android:backgroundTint="#000080"
        android:text="Cancel" />

</AbsoluteLayout>